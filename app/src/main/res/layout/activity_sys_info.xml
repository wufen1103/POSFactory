		<TextView
			android:id="@+id/tv_buildID"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/sys_cannotget"
			android:textColor="@android:color/black"
			android:textSize="@dimen/tx_size_20" />
	</LinearLayout>

	<LinearLayout
