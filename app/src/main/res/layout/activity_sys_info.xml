			<GridLayout
				android:id="@+id/gridLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:columnCount="2"
				android:orientation="horizontal"
				android:rowCount="2">

				<Button
					android:id="@+id/sys_settings_app"
					android:layout_marginTop="@dimen/margin_15"
					android:text="@string/sys_settings_app"
					android:textSize="@dimen/tx_size_20" />

				<Button
					android:id="@+id/sys_settings_datetime"
					android:layout_marginTop="@dimen/margin_15"
					android:text="@string/sys_settings_datetime"
					android:textSize="@dimen/tx_size_20" />

				<Button
					android:id="@+id/sys_settings_reset"
					android:layout_marginTop="@dimen/margin_15"
					android:text="@string/sys_settings_reset"
					android:textSize="@dimen/tx_size_20" />
				<Button
					android:id="@+id/bt_stress"
					android:layout_marginTop="@dimen/margin_15"
					android:text="@string/into_stress"
					android:textSize="@dimen/tx_size_20" />
			</GridLayout>

			<Button
				android:id="@+id/sys_settings"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="25dp"
				android:padding="10dp"
				android:text="@string/sys_settings"
				android:textSize="@dimen/tx_size_20" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_gravity="center_horizontal|bottom"
			android:layout_weight="1"
			android:gravity="center_horizontal|bottom"
			android:orientation="vertical">

			<ImageView
				android:id="@+id/iv_mac"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/margin_20" />

			<TextView
				android:id="@+id/net_meg"
				android:layout_width="match_parent"
