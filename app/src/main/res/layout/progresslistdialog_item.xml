<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vwFileDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:background="#FFFFFF"
	android:orientation="horizontal"
    android:padding="@dimen/margin_5">

    <ImageView
        android:id="@+id/filedialogitem_image"
        android:contentDescription="@string/strFileDialogItem"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="4dp"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical" >
        <TextView
            android:id="@+id/filedialogitem_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="@dimen/tx_size_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/filedialogitem_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textSize="@dimen/tx_size_12" />
       <TextView
           android:id="@+id/filedialogitem_size"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#000000"
           android:textSize="@dimen/tx_size_12"
           android:layout_gravity="right"
           android:gravity="right"/>
    </LinearLayout>

</LinearLayout>

