<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval" >
            <corners android:radius="@dimen/margin_20"/>
            <solid android:color="#FFFFE0" />
            <size android:width="120dp" android:height="120dp"/>
        </shape>
    </item>

    <item android:bottom="8dp" android:right="8dp" android:top="8dp" android:left="8dp" >
        <selector xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:state_pressed="true">
                <shape android:shape="oval" >
                    <corners android:radius="@dimen/margin_20"/>
                    <solid android:color="#FFFF00" />
                    <size android:width="112dp" android:height="112dp"/>
                </shape>
            </item>

            <item>
                <shape android:shape="oval" >
                    <corners android:radius="@dimen/margin_20"/>
                    <solid android:color="#FFEC8B" />
                    <size android:width="112dp" android:height="112dp"/>
                </shape>
            </item>

        </selector>
    </item>

</layer-list>